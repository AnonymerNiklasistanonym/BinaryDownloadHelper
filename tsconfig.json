{
    "compilerOptions": {
        "module": "Node16",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node16",
        "sourceMap": true,
        "removeComments": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
